    "tasks": [
        {
            "label": "cmake - debug",
            "command": "cmake -S. -Bbuild -DCMAKE_BUILD_TYPE=Debug;cmake --build build -j8",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
